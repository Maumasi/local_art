{% extends 'base.html.twig' %}

{% block body %}

    <h1>Venue Registration</h1>

    {{ form_start(venueRegistration) }}

    {{ form_errors(venueRegistration) }}

        {#basic market venue details#}
        {{ form_row(venueRegistration.firstName) }}
        {{ form_row(venueRegistration.lastName) }}
        {{ form_row(venueRegistration.profileImage) }}
        {{ form_row(venueRegistration.email) }}

        {{ form_row(venueRegistration.nakedPassword.first, {
            'label': 'Password'
        }) }}
        {{ form_row(venueRegistration.nakedPassword.second, {
            'label': 'Confirm Password'
        }) }}

        {#market info#}
        {{ form_row(venueRegistration.marketName) }}
        {{ form_row(venueRegistration.marketSubtitle) }}
        {{ form_row(venueRegistration.marketName) }}
        {{ form_row(venueRegistration.bio) }}
        {{ form_row(venueRegistration.website) }}

        {#market address#}
        {{ form_row(venueRegistration.streetAddress) }}
        {{ form_row(venueRegistration.city) }}
        {{ form_row(venueRegistration.state) }}
        {{ form_row(venueRegistration.zipCode) }}

        {#market hours#}
        {{ form_row(venueRegistration.sunOpen) }}
        {{ form_row(venueRegistration.monOpen) }}
        {{ form_row(venueRegistration.tueOpen) }}
        {{ form_row(venueRegistration.wedOpen) }}
        {{ form_row(venueRegistration.thuOpen) }}
        {{ form_row(venueRegistration.friOpen) }}
        {{ form_row(venueRegistration.satOpen) }}

        {{ form_row(venueRegistration.sunClose) }}
        {{ form_row(venueRegistration.monClose) }}
        {{ form_row(venueRegistration.tueClose) }}
        {{ form_row(venueRegistration.wedClose) }}
        {{ form_row(venueRegistration.thuClose) }}
        {{ form_row(venueRegistration.friClose) }}
        {{ form_row(venueRegistration.satClose) }}

        {{ form_row(venueRegistration.marketHours, {
            'label': ' ',
            'attr': {
                hidden: true
            }
        }) }}




        <button type="submit" formnovalidate>Register!</button>
    {{ form_end(venueRegistration) }}

{% endblock %}