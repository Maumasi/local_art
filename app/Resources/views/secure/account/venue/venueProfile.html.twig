{% extends 'base.html.twig' %}

{% block body %}

    <main class="venue-profile">

        {#/ hero image /#}
        {#<image  src="{{ asset('uploads/' ~ user.profileImage) }}" alt="{{ user.firstName ~ ' ' ~ user.lastName }} profile image" />#}

        <div class="profile-image"
             style=" background: url( {{ asset('uploads/' ~ user.profileImage) }} ) no-repeat;
                     background-size: cover;
                     background-position: center;

                     /*height: 45vh;*/
                     /*margin-top: 1rem;*/
                     /*position: relative;*/
                     /*background-color: #fff;*/
                     ">
        </div>

        {#/ use market name if user has one else use there name /#}
        <h1>{{ user.marketName }}</h1>

        {#/ bio /#}
        <h2>About {{ user.marketName }}</h2>
        <p class="bio">{{ user.bio }}</p>

        {#/ venue address /#}
        <address>
            <p>{{ user.city }}</p>
            <p>{{ user.state }}</p>
            <p>{{ user.zipCode }}</p>
        </address>


        <h2>Contact Venue</h2>
        <ul>
            <li>
                <p><a target="_blank" href="{{ user.website }}" >Visit artist's website</a></p>
            </li>

            <li>
                <p><a href="mailto:{{ user.email }}">{{ user.email }}</a></p>
            </li>
        </ul>

        <p><a href="{{ path('invite_artist_to_market') }}">Find artists</a></p>
        <p><a href="{{ path('pending_invitations') }}">Pending invitations <span>{{ pending_invites }}</span></a></p>

        {% if market_group %}
            <ul>
                {% for market in market_group %}
                    {% set artist = market.artist %}
                    <li>
                        <div class="artist-group-member-image"
                             style=" background: url( {{ asset('uploads/' ~ artist.profileImage) }} ) no-repeat;
                                     background-size: cover;
                                     background-position: center;
                                     "
                        >
                            <a href="{{ path('artist_details', { artistId: artist.id }) }}">

                                {% if artist.businessName %}
                                    <span>{{ artist.businessName }}</span>
                                {% else %}
                                    <span>{{ artist.firstName }} {{ artist.lastName }}</span>
                                {% endif %}
                            </a>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        
    </main>

{% endblock %}